# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Set to ""true"" to use Supabase, ""false"" to use local PostgreSQL
USE_SUPABASE=False

# Supabase Configuration (only needed if USE_SUPABASE=true)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Local PostgreSQL Configuration (only needed if USE_SUPABASE=false)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=ecommerce_db
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=datalens

# Gmail Configuration
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Note: Copy this file to .env and fill in your actual values
# Gmail App Password: Generate from Google Account > Security > 2-Step Verification > App Passwords
# Local PostgreSQL: Run database/init_database.py to set up the database
